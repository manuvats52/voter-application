@model voter_application.Views.Home.login_pageModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login_page.css">
</head>
<body>
    <div class="company-logo">
        <img src="../images/logo_redfox.png" alt="Company Logo">
        <!-- <div class="company-name">Advik Pos Services</div> -->
    </div>
    <div class="container mt-5">
        <div class="login-form">
            <h1>Login</h1>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username or E-mail</label>
                    <input type="text" class="form-control" id="username" name="emailOrMobile" placeholder="Enter Username or E-mail" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required>
                </div>
                <div id="forgotlink" class="mt-3 text-muted">
                    <a href="@Url.Action("ForgotPassword", "Home")" id="forgot-password-link">Forgot password?</a>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                    <a href="#" class="btn btn-outline-primary btn-block" id="signup-btn">Sign Up</a>
                </div>
            </form>
            <p class="mt-3 text-muted">©2024 Login. All rights reserved | Design by Advik</p>
        </div>
    </div>
    <script>
        document.getElementById('signup-btn').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent the default action (e.g., form submission or anchor navigation)
            window.location.href = '@Url.Action("Signup", "Home")'; // Redirect to signup page
        });
    </script>
</body>
</html>