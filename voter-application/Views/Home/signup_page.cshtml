@model voter_application.Views.Home.signup_pageModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/signup_page.css">
</head>
<body>
    <div class="company-logo">
        <img src="../images/logo_redfox.png" alt="Company Logo">
        <!-- <div class="company-name">Advik Pos Services</div> -->
    </div>
    <div class="container mt-5">
        <div class="login-form">
            <h1>Sign Up</h1>
            <form asp-action="SignUp" method="post">
                <div class="mb-3">
                    <label for="fullname" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullname" name="FullName" placeholder="Enter Full Name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email or Mobile Number</label>
                    <input type="text" class="form-control" id="email" name="EmailOrMobile" placeholder="Enter Email or Mobile Number" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="Password" placeholder="Enter Password" required>
                </div>
                <div class="mb-3">
                    <label for="confirm-password" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirm-password" name="ConfirmPassword" placeholder="Confirm Password" required>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                    <a href="#" class="btn btn-outline-primary btn-block" id="cancel-btn">Cancel</a>
                </div>
            </form>
            <p class="mt-3 text-muted">©2024 Sign Up. All rights reserved | Design by Advik</p>
        </div>
    </div>
    <script>
        var loginUrl = '@Url.Action("login", "Home")'; // Generate login page URL
        document.getElementById("cancel-btn").addEventListener("click", function () {
            window.location.href = loginUrl; // Redirect to the login page
        });
    </script>
</body>
</html>