@page
@model voter_application.Views.Home.forgot_pageModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/forgot_page.css">
</head>
<body>
    <div class="company-logo">
        <img src="../images/logo_redfox.png" alt="Company Logo">
        <!-- <div class="company-name">Advik Pos Services</div> -->
    </div>
    <div class="container mt-5">
        <div class="forgot-password-form">
            <h1>Forgot Password</h1>
            <p>Please enter your email address to reset your password.</p>
            <form id="forgot-password-form">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
            </form>
            <a href="@Url.Action("Login", "Home")" class="back-to-login">Back to Login</a>
        </div>
    </div>
</body>
</html>
